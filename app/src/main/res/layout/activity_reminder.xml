<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootReminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <ScrollView
        android:id="@+id/scrollReminder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Admin Reminders title -->
            <TextView
                android:id="@+id/textAdminTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Reminders"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <!-- ADMIN REMINDER 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAdmin1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="28dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/home_card_bg"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="18dp">

            <TextView
                android:id="@+id/textAdminTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSIR Foundation Day"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textAdminDesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="All staff event scheduled by admin."
                android:textSize="16sp"
                android:textColor="#FFE0E0E0" />

            <TextView
                android:id="@+id/textAdminTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="12 Jan, 10:00 AM"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ADMIN REMINDER 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAdmin2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="28dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_card_bg"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="18dp">

            <TextView
                android:id="@+id/textAdminTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safety Training"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textAdminDesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mandatory lab safety session."
                android:textSize="16sp"
                android:textColor="#FFE0E0E0" />

            <TextView
                android:id="@+id/textAdminTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="18 Jan, 03:00 PM"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- YOUR REMINDERS title -->
    <TextView
        android:id="@+id/textUserTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Reminders"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- USER REMINDER 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardUser1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="28dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_card_bg"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="18dp">

        <TextView
            android:id="@+id/textUserTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Meeting"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textUserDesc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Reminder created by you."
            android:textSize="16sp"
            android:textColor="#FFE0E0E0" />

        <TextView
            android:id="@+id/textUserTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tomorrow, 11:00 AM"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- USER REMINDER 2 -->
<androidx.cardview.widget.CardView
android:id="@+id/cardUser2"
android:layout_width="match_parent"
android:layout_height="140dp"
android:layout_marginBottom="32dp"
app:cardCornerRadius="28dp"
app:cardUseCompatPadding="true"
app:cardElevation="0dp"
app:cardBackgroundColor="@android:color/transparent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_card_bg"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="18dp">

    <TextView
        android:id="@+id/textUserTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Report"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textUserDesc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Upload weekly report."
        android:textSize="16sp"
        android:textColor="#FFE0E0E0" />

    <TextView
        android:id="@+id/textUserTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Friday, 05:00 PM"
        android:textSize="16sp"
        android:textColor="@android:color/black" />
</LinearLayout>
</androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
